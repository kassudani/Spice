@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br />

<div class="border background-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right" >
            <partial name="_CreateNewButtonPartialView" />
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.CategoryName)
                </th>
                <th></th>
            </tr>
            @if (Model.Count() > 0)
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => category.CategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => category.CategoryName)
                        </td>
                        <partial name="_EditDeleteDetailsButtonsPartialView" model="category.CategoryId" />
                        
                    </tr>
                }
            }
            else
            {
                <p class="text-center"><b>No Category exists..</b></p>
            }
        </table>
    </div>
</div>
