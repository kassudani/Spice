@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="border background-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupon List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateNewButtonPartialView" />
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.CouponId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.CouponName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.MinimumAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.IsActive)
                </th>
                <th></th>
            </tr>
            @if (Model.Count() > 0)
            {
                @foreach (var coupon in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => coupon.CouponId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => coupon.CouponName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => coupon.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => coupon.MinimumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => coupon.IsActive)
                        </td>

                        <partial name="_EditDeleteDetailsButtonsPartialView" model="coupon.CouponId" />

                    </tr>
                }
            }
            else
            {
                <p class="text-center"><b>No Coupons exists..</b></p>
            }
        </table>
    </div>
</div>
