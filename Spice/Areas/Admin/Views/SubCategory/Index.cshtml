@model IEnumerable<SubCategory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="border background-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateNewButtonPartialView" />
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border">

            @if (Model.Count() > 0)
            {
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.SubCategoryName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Category.CategoryName)
                    </th>
                    <th></th>
                </tr>
                @foreach (var subCategory in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => subCategory.SubCategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(m => subCategory.SubCategoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(m => subCategory.Category.CategoryName)
                        </td>
                        <partial name="_EditDeleteDetailsButtonsPartialView" model="subCategory.SubCategoryId" />

                    </tr>
                }
            }
            else
        {
        <p class="text-center"><b>No Sub Category Exists..</b></p>
        }
        </table>
        
    </div>
</div>
