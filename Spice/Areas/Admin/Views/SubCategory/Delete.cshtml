@model Spice.Models.ViewModels.CategoryAndSubCategoryViewModel
@using Spice.Extensions

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Delete Sub Category</h2>
<br />

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="border background-white row">

    <!-- div for LHS -->
    <div class="col-8 border-right">
        <form asp-action="Delete">
            <div class="text-danger"></div>
            <input type="hidden" asp-for="SubCategory.CategoryId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select asp-for="SubCategory.CategoryId"
                            asp-items="Model.CategoryList.ToSelectListItem(Model.SubCategory.CategoryId)"
                            disabled class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.SubCategoryName" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input readonly asp-for="SubCategory.SubCategoryName" class="form-control" />
                </div>
                <span asp-validation-for="SubCategory.SubCategoryName" class="text-danger"></span>
            </div>
            <div class="col-5 offset-3">
                <partial name="_DeleteAndBackButtonsPartialView" model="Model.SubCategory.SubCategoryId" />
            </div>
        </form>
    </div>
</div>