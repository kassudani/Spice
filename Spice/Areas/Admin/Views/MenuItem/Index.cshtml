@model IEnumerable<MenuItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="border background-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Menu Item List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateNewButtonPartialView" />
        </div>
    </div>
    <br />
    <div>
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(m => m.MenuItemId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.MenuItemName)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.SubCategoryId)
                </th>
                <th></th>
            </tr>
            @if (Model.Count() > 0)
            {
                @foreach (var menuItem in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(m => menuItem.MenuItemId)
            </td>
            <td>
                @Html.DisplayFor(m => menuItem.MenuItemName)
            </td>
            <td>
                @Html.DisplayFor(m => menuItem.Price)
            </td>
            <td>
                @Html.DisplayFor(m => menuItem.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(m => menuItem.SubCategory.SubCategoryName)
            </td>
            <partial name="_EditDeleteDetailsButtonsPartialView" model="menuItem.MenuItemId" />

        </tr>
                }
            }
            else
            {
                <p class="text-center"><b>No Menu Item exists..</b></p>
            }
        </table>
    </div>
</div>
