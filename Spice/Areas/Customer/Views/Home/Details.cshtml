@model Spice.Models.ShoppingCart
@using Spice.Extensions

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Item Details</h2>
<br />

<form method="post">
    <div class="border background-white row">
        <input type="hidden" asp-for="MenuItem.MenuItemId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!--div for lhs-->

        <div class="col-md-8">

            <div class="col-12 pb-4 d-md-none">
                <img src="@Model.MenuItem.Image" style=" width:100%; border-radius:5px; border: 1px solid #bbb9b9" />
            </div>

            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.MenuItemName" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.MenuItemName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Description" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    @Html.Raw(Model.MenuItem.Description)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Price" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.Price" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.CategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.Category.CategoryName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.SubCategoryId" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input readonly asp-for="MenuItem.SubCategory.SubCategoryName" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="MenuItem.Spiciness" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <select asp-for="MenuItem.Spiciness" asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()"
                            disabled class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4">
                    <label asp-for="Count" class="text-info font-weight-bold"></label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to list</a>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary form-control" value="Add to Cart">Add to Cart</button>
                </div>
            </div>
        </div>

        <!--div for rhs-->

        <div class="col-md-3 offset-1  d-none d-md-block">
            <img src="@Model.MenuItem.Image" style=" width:100%; border-radius:5px; border: 1px solid #bbb9b9" />
        </div>

    </div>

    <input asp-for="MenuItemId" hidden />

</form>


@section Scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}